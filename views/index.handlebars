<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    {{#each posts}}
        <div class="post-preview">
            <a href="post.html">
                <h2 class="post-title">
                    {{this.title}}
                </h2>
                <h3 class="post-subtitle">
                    {{this.summary}}
                    {{this.content}}
                </h3>
            </a>
        </div>
    {{/each}}
    </div>
</div>